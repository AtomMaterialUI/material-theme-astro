---
// Home page for Material Theme UI Documentation
import BaseLayout from '../layouts/BaseLayout.astro';
import Banner from '../components/Banner.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
    title="Material Theme UI"
    description="The Material Theme plugin is a plugin for JetBrains IDEs which completely redesigns the UI with a beautiful and configurable Material Design UI."
>
  <Banner slot="banner"/>

  <div class="hero">
    <div class="container">
      <div class="row center-align">
        <div class="col s12">
          <img src="/img/logo/material-oceanic.svg" alt="Material Theme Logo" width="120" height="120"/>

          <h1>Material Theme UI</h1>
          <p class="flow-text">
            Material Design experience for JetBrains IDEs
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="features">
    <div class="container">
      <h2 class="center-align">Features</h2>
      <div class="row">
        <div class="col s12 m4">
          <div class="card">
            <div class="card-content">
              <span class="card-title">Material Design</span>
              <p>Enjoy a complete Material Design experience with carefully crafted components and animations.</p>
            </div>
          </div>
        </div>
        <div class="col s12 m4">
          <div class="card">
            <div class="card-content">
              <span class="card-title">Multiple Themes</span>
              <p>Choose from a variety of pre-bundled themes or create your own custom theme.</p>
            </div>
          </div>
        </div>
        <div class="col s12 m4">
          <div class="card">
            <div class="card-content">
              <span class="card-title">Customizable</span>
              <p>Customize every aspect of the UI, from colors to component styles and more.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <Footer slot="footer"/>

  <style>
    .hero {
      padding: 4rem 0;
      text-align: center;
      background-color: var(--primary-color);
    }

    .hero h1 {
      margin-top: 1rem;
      font-size: 3rem;
      font-weight: 300;
    }

    .hero .flow-text {
      max-width: 600px;
      margin: 1rem auto 2rem;
    }

    .buttons {
      margin: 2rem 0;
    }

    .buttons a {
      margin: 0 0.5rem;
      background-color: var(--accent-color);
      color: var(--primary-color);
    }

    .features {
      padding: 4rem 0;
      background-color: var(--secondary-color);
    }

    .features h2 {
      margin-bottom: 3rem;
    }

    .card {
      background-color: var(--primary-color);
      height: 100%;
    }

    .card-title {
      color: var(--accent-color);
    }
  </style>
</BaseLayout>