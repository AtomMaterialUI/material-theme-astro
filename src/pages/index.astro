---
import Banner from '../components/Banner.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
// Home page for Material Theme UI Documentation
import BaseLayout from '../layouts/BaseLayout.astro';
import ThemeChooser from '../components/ThemeChooser.astro';
---

<BaseLayout
  title="Material Theme UI"
  description="The Material Theme plugin is a plugin for JetBrains IDEs which completely redesigns the UI with a beautiful and configurable Material Design UI."
>
  <Banner slot="banner" />

  <Header slot="header" />

  <div class="w-full">
    <div class="p-[20px] rounded-[2px] box-border mb-[20px] relative">
      <ThemeChooser />
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>