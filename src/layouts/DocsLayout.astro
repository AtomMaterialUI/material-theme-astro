---
// Documentation layout extending the base layout
import BaseLayout from './BaseLayout.astro';
import Sidebar from '../components/Sidebar.astro';
import Banner from '../components/Banner.astro';
import Footer from '../components/Footer.astro';
import TableOfContents from '../components/TableOfContents.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  toc?: boolean;
  group?: string;
  previous?: {
    url: string;
    title: string;
  };
  next?: {
    url: string;
    title: string;
  };
}

const {
  title,
  description,
  image,
  toc = false,
  group,
  previous,
  next
} = Astro.props;
---

<BaseLayout title={title} description={description} image={image}>
  <Banner slot="banner" />

  <div class="docs-header">
    {title && <h1 class="docs-title">{title}</h1>}
    {description && <h2 class="docs-subtitle">{description}</h2>}

    <div class="fixed-action-btn">
      <a class="btn-floating btn-large red">
        <i class="large fa fa-paint-brush tooltipped"
           data-position="left"
           data-tooltip="Open Theme Switcher"></i>
      </a>
      <!-- Theme switcher buttons will be added via JavaScript -->
    </div>

    <div class="github-corner-wrapper">
      <div class="code version-section">
        <a href="https://github.com/mallowigi/material-theme-issues" class="github-corner"
           target="_blank"
           aria-label="View source on GitHub"
           title="View source on GitHub">
          <svg width="80"
               height="80"
               viewBox="0 0 250 250"
               class="github-ribbon"
               aria-hidden="true">
            <path
              d="M0,0 L115,115 L130,115 L142,142 L250,250 L250,0 Z"></path>
            <path
              d="M128.3,109.0 C113.8,99.7 119.0,89.6 119.0,89.6 C122.0,82.7 120.5,78.6 120.5,78.6 C119.2,72.0 123.4,76.3 123.4,76.3 C127.3,80.9 125.5,87.3 125.5,87.3 C122.9,97.6 130.6,101.9 134.4,103.2"
              fill="currentColor" style="transform-origin: 130px 106px;" class="octo-arm"></path>
            <path
              d="M115.0,115.0 C114.9,115.1 118.7,116.5 119.8,115.4 L133.7,101.6 C136.9,99.2 139.9,98.4 142.2,98.6 C133.8,88.0 127.5,74.4 143.8,58.0 C148.5,53.4 154.0,51.2 159.7,51.0 C160.3,49.4 163.2,43.6 171.4,40.1 C171.4,40.1 176.1,42.5 178.8,56.2 C183.1,58.6 187.2,61.8 190.9,65.4 C194.5,69.0 197.7,73.2 200.1,77.6 C213.8,80.2 216.3,84.9 216.3,84.9 C212.7,93.1 206.9,96.0 205.4,96.6 C205.1,102.4 203.0,107.8 198.3,112.5 C181.9,128.9 168.3,122.5 157.7,114.1 C157.9,116.9 156.7,120.9 152.7,124.9 L141.0,136.5 C139.8,137.7 141.6,141.9 141.8,141.8 Z"
              fill="currentColor" class="octo-body"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <div class="content">
    <div class="doc">
      <slot />

      <div class="post-nav">
        {previous && (
          <a class="btn prev" href={previous.url}>
            <i class="fa fa-angle-left"></i><span class="short"> prev</span><span
            class="long">ious: {previous.title}</span>
          </a>
        )}
        {next && (
          <a class="btn next" href={next.url}>
            <span class="short">next </span><span class="long">: {next.title} </span><i
            class="fa fa-angle-right"></i>
          </a>
        )}
      </div>

      <slot name="comments" />
    </div>

    <Sidebar activeGroup={group} />

    {toc && (
      <div class="toc">
        <TableOfContents />
      </div>
    )}
  </div>

  <Footer slot="footer" />

  <script slot="scripts">
    // Initialize Materialize components
    document.addEventListener('DOMContentLoaded', function() {
      // Initialize tooltips
      const tooltipElems = document.querySelectorAll('.tooltipped');
      M.Tooltip.init(tooltipElems);

      // Initialize floating action button
      const fabElems = document.querySelectorAll('.fixed-action-btn');
      M.FloatingActionButton.init(fabElems);

      // Initialize collapsible elements
      const collapsibleElems = document.querySelectorAll('.collapsible');
      M.Collapsible.init(collapsibleElems);
    });
  </script>
</BaseLayout>
