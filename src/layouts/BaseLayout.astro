---
import '../styles/global.css';

import Head from '../components/Head.astro';
import Scripts from '../components/Scripts.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;

import { currentTheme } from '../themes';

const { background, foreground, second, accent, border, contrast, selectFg, button, text, selectBg } = currentTheme;
---

<!doctype html>
<html lang="en">
  <!--suppress HtmlRequiredTitleElement -->
  <head>
    <Head title={title} description={description} />

    <!-- Optional head -->
    <slot name="head" />
  </head>

  <body id="index" class="transition-all duration-1000 theme-oceanic">
    <slot name="banner" />

    <slot name="header" />

    <div class="main p-50 w-full max-sm:p-0 transition-all duration-1000">
      <div class="content">
        <slot />
      </div>
    </div>

    <slot name="footer" />

    <!-- Scripts -->
    <slot name="scripts" />

    <Scripts />
  </body>
</html>

<style define:vars={{ background, foreground, second, accent, border, contrast, selectFg, button, text, selectBg }}>
  body {
    background-color: var(--background);
    color: var(--foreground);
  }

  :global(pre) {
    background-color: var(--second);
    color: var(--foreground);
    border-color: var(--border);
  }

  :global(a) {
    color: var(--accent);

    &:hover {
      color: var(--accent);
    }
  }

  :global(input),
  :global(textarea) {
    border-color: var(--border);

    &:focus {
      border-color: var(--accent);
    }
  }

  :global(blockquote) {
    background-color: var(--second);
    border-color: var(--border);
    color: var(--foreground);
  }

  :global(.muted) {
    color: var(--foreground);
  }

  :global(table tbody tr:nth-child(odd)),
  :global(.card-panel),
  :global(.card) {
    background-color: var(--contrast);
    color: var(--foreground);
  }

  :global(.card-panel.warn) {
    background-color: var(--accent);
    color: var(--selectFg);
  }

  :global(.card-panel.error) {
    color: var(--selectFg);
  }

  :global(.card-panel a) {
    color: var(--accent);
  }

  :global(.github-ribbon) {
    color: var(--selectFg);
    fill: var(--accent);
  }

  :global(.btn) {
    background-color: var(--accent);
    color: var(--selectFg);

    &:hover {
      background-color: var(--accent);
      color: var(--selectFg);
    }
  }
</style>