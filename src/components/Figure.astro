---
import Image from 'astro/components/Image.astro';

// Figure component - displays an image with a caption
// This replaces the Jekyll include figure.html

interface Props {
  src: string;
  caption?: string;
  alt?: string;
  width?: string | number;
  height?: string | number;
}

const { src, caption, alt = caption || 'Image', width, height } = Astro.props;
---

<figure class="figure">
  <Image src={src} alt={alt} width={Number(width)} height={Number(height)} loading="lazy" class="responsive-img" />
  {caption && <figcaption>{caption}</figcaption>}
</figure>

<style>
  .figure {
    margin: 2rem 0;
    text-align: center;
  }

  .responsive-img {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  figcaption {
    margin-top: 0.5rem;
    font-style: italic;
    color: var(--foreground);
    opacity: 0.8;
  }
</style>